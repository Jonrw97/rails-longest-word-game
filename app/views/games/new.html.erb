<h2 class="m-3">New Game</h2>
<div class="d-flex justify-content-around w-50 m-auto">
<% @letters.each do |letter| %>
  <div class="card p-3 border border-primary"><%=letter%></div>
<%end%>
</div>
<form class="mt-4" action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input  type="hidden" name="grid" value=<%=@letters.join%>>
  <input class="form-control w-25 m-auto" type="text" placeholder="Longest word" name="answer">
  <input class="btn btn-outline-primary mt-2" type="submit" value="Play">
</form>
